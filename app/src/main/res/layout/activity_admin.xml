<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/butter"
    tools:context="pl.edu.agh.shapewatcher.AdminActivity">

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="444dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Analysis"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sex:"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Male" />

            <CheckBox
                android:id="@+id/checkBoxFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Female" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Age:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="From" />

            <EditText
                android:id="@+id/editTextAgeDown"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:inputType="number"
                />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="14sp"
                android:text="To" />

            <EditText
                android:id="@+id/editTextAgeUp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:inputType="number"  />
        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Education:" />

        <CheckBox
            android:id="@+id/checkBoxPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary education" />

        <CheckBox
            android:id="@+id/checkBoxSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secondary education" />

        <CheckBox
            android:id="@+id/checkBoxHigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="High school" />

        <CheckBox
            android:id="@+id/checkBoxBachelor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bachelor's degree" />

        <CheckBox
            android:id="@+id/checkBoxMaster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Master's degree" />

        <CheckBox
            android:id="@+id/checkBoxDoctorate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctorate" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonShowResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show results"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.838" />

</android.support.constraint.ConstraintLayout>
